<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<BorderPane fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml" >
    <top>
        <Label text="This label is in top position" alignment="CENTER"
               BorderPane.alignment="CENTER"
        style="-fx-border-color: blue; -fx-border-style: dashed; -fx-border-width: 3"/>
    </top>
    <center><Label text="This label is in center position Looooooooooooooooooooooong text"/></center>
    <left><Label text="This label is in left position"/></left>
    <right><Label text="This label is in right position"/></right>
    <bottom>
        <HBox spacing="10" alignment="TOP_RIGHT">
            <padding>
                <Insets bottom="10" right="10"/>
            </padding>
            <Button text="Okay" prefWidth="90"/>
            <Button text="Cancel" prefWidth="90"/>
            <Button text="Help" prefWidth="90"/>
        </HBox>
    </bottom>
</BorderPane>